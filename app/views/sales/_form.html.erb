<%= form_tag import_sales_path, method: :post, local: true, multipart: true do %>
  <div class="col l8 s12 file-field input-field offset-l2 inputFile">
    <div class="btn brn-flat white-text waves-effect waves-light grey">
      <span><%= t('labels.file') %></span>
      <%= file_field_tag :file, required: true, accept: 'text/plain' %>
    </div>
    <div class="file-path-wrapper">
      <input class="file-path validate" type="text" />
    </div>
  </div>
  <div class="row nm">
    <div class="col l12 s12 center-align">
      <a class="btn btn-large red white-text waves-effect waves-light closeModal"><%= t('buttons.cancel') %></a>
      <button class="btn btn-large cyan white-text waves-effect waves-light"><%= t('buttons.send') %></button>
    </div>
  </div>
<% end %>
